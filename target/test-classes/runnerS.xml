<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Lumademo test">
    <parameter name="useCloudEnv" value="false"></parameter>
    <parameter name="envName" value="browserstack"></parameter>
    <parameter name="os" value="windows"></parameter>
    <parameter name="osversion" value="11"></parameter>
    <parameter name="browservesion" value="111"></parameter>
    <parameter name="browserName" value="chrome"></parameter>
    <parameter name="url" value="https://magento.softwaretestingboard.com/"></parameter>

    <test name="signup  test">
        <classes>
            <class name="us.piit.luma.CreateAccount"></class>
        </classes>
    </test>
    <test name="Login test">
            <classes>
                <class name="us.piit.luma.LoginTest"></class>
            </classes>
    </test>
    <test name="AddToCar test">
        <classes>
            <class name="us.piit.luma.AddItemToCart"></class>
        </classes>
    </test>
    <test name="searchbar test">
        <classes>
            <class name="us.piit.luma.SearchBarTest"></class>
        </classes>
    </test>
    <test name="create account test">
        <classes>
            <class name="us.piit.luma.PurchaseItemTest"></class>
        </classes>
    </test>


</suite>